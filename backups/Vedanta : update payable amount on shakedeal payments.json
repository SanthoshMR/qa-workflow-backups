    {
      "parameters": {
        "functionCode": "let vendorPayments = $node[\"Get vendor invoice details\"].json[\"data\"][0][\"vendor_payments\"];\nlet payableAmount = $node[\"Get shakedeal payments\"].json[\"data\"][\"payment_paid\"];\nlet invoiceDetails = $node[\"Get vendor invoice details\"].json[\"data\"][0];\nlet updateObj = {};\nif(invoiceDetails.total_paid_amount>0){\n  // let releasedVendorPayments = vendorPayments.filter(payment=>payment.vendor_payment_status);\n  // let paidAmount = releasedVendorPayments.reduce(function (result, item) {\n  //   return result + item.payment_amount;\n  // }, 0);\n  updateObj.payable_amount = payableAmount;\n  updateObj.remaining_to_pay = payableAmount - invoiceDetails.remaining_to_pay\n  updateObj.total_percentage_paid = (invoiceDetails.total_paid_amount/payableAmount)*100;\n}else{\n  updateObj.payable_amount = payableAmount;\n  updateObj.remaining_to_pay = payableAmount;\n}\n\nitems[0].json.updateObj = updateObj\nreturn items;"
